# ==============================================================================
# FOX-Reviews Backend - Configuration Environment Variables
# ==============================================================================
# Copier ce fichier en .env et remplir les valeurs

# Django Core
# ------------------------------------------------------------------------------
DJANGO_DEBUG=True
DJANGO_SECRET_KEY=your-secret-key-here-change-in-production
DJANGO_ALLOWED_HOSTS=localhost,127.0.0.1,fox-reviews.com
DJANGO_READ_DOT_ENV_FILE=True

# Database (PostgreSQL)
# ------------------------------------------------------------------------------
DATABASE_URL=postgres://user:password@localhost:5432/foxreviews

# Redis (Cache & Celery)
# ------------------------------------------------------------------------------
REDIS_URL=redis://localhost:6379/0
CELERY_BROKER_URL=redis://localhost:6379/0

# API IA FOX-Reviews (Service externe)
# ------------------------------------------------------------------------------
# URL de base de l'API IA (voir agent/schemas/api-v1.yml)
AI_API_BASE_URL=http://localhost:8080/api/v1
# Clé API pour authentification
AI_API_KEY=your-api-key-here
# Timeout requêtes (secondes)
AI_API_TIMEOUT=30

# Email (Production)
# ------------------------------------------------------------------------------
EMAIL_BACKEND=django.core.mail.backends.smtp.EmailBackend
EMAIL_HOST=smtp.sendgrid.net
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=apikey
EMAIL_HOST_PASSWORD=your-sendgrid-api-key

# Stripe (Paiements sponsorisations)
# ------------------------------------------------------------------------------
STRIPE_PUBLIC_KEY=pk_test_...
STRIPE_SECRET_KEY=sk_test_...
STRIPE_WEBHOOK_SECRET=whsec_...

# Sentry (Monitoring erreurs)
# ------------------------------------------------------------------------------
SENTRY_DSN=https://...@sentry.io/...

# AWS S3 (Stockage fichiers)
# ------------------------------------------------------------------------------
AWS_ACCESS_KEY_ID=your-access-key
AWS_SECRET_ACCESS_KEY=your-secret-key
AWS_STORAGE_BUCKET_NAME=foxreviews-media
AWS_S3_REGION_NAME=eu-west-3

# CORS (Frontend React)
# ------------------------------------------------------------------------------
CORS_ALLOWED_ORIGINS=http://localhost:3000,https://fox-reviews.com
